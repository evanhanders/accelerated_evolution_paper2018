#PBS -S /bin/bash
#PBS -N RB_se4_1.00
#PBS -l select=5:ncpus=28:mpiprocs=28:model=bro_ele
#PBS -l walltime=8:00:00
#PBS -j oe
#PBS -q normal

export dedalus_script=rayleigh_benard
export dedalus_dir=$HOME/workdir/rb_base_post/

cd $PBS_O_WORKDIR

RA=1.30e7
s=4_1.00
label=base

mkdir $dedalus_dir

echo running the job

date
mpiexec_mpt -np 128 ~/.python3 $dedalus_script.py \
        --Rayleigh=$RA  \
        --Prandtl=1     \
        --aspect=5.1038 \
		--nz=256        \
        --nx=1024        \
		--run_time=7.5 \
        --run_time_buoy=500 \
        --mixed_flux_T \
        --no_slip \
        --output_dt=1 \
        --label=$label \
        --restart=/nobackup/eanders/rb_base_pre/rayleigh_benard_2D_mixed_noSlip_Ra$RA\_Pr1_a4_base/final_checkpoint/final_checkpoint_s1.h5 \
		--root_dir=$dedalus_dir \
		 > $dedalus_dir/out.s$s.$PBS_JOBID
