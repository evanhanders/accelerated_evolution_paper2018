#PBS -S /bin/bash
#PBS -N RB_se3_4.64
#PBS -l select=5:ncpus=28:mpiprocs=28:model=bro_ele
#PBS -l walltime=12:00:00
#PBS -j oe
#PBS -q long

export dedalus_script=rayleigh_benard
export dedalus_dir=$HOME/workdir/rb_base_pre/

cd $PBS_O_WORKDIR

RA=6.01e6
s=3_4.64
label=base

mkdir $dedalus_dir

echo running the job

# 1 - 60 - 3 rolls, oscillates
# 2 - 70 - 2 rolls, steady
# 3 - 80 - 2 rolls, steady
# 4 - 90 - 2 rolls, steady

date
mpiexec_mpt -np 128 ~/.python3 $dedalus_script.py \
        --Rayleigh=$RA  \
        --Prandtl=1     \
        --aspect=4.924 \
		--nz=256        \
        --nx=1024        \
		--run_time=11.5 \
        --seed=70 \
        --run_time_therm=1 \
        --mixed_flux_T \
        --no_slip \
        --output_dt=1 \
        --label=$label \
		--root_dir=$dedalus_dir \
		 > $dedalus_dir/out.s$s.$PBS_JOBID

#qsub run_scripts/base_post/ra_s3e4_base
